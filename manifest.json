{
    "name": "Bibmath Blackboard",
    "version": "0.0.1",
    "description": "",
    "homepage_url": "https://www.bibmath.net/",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://www.bibmath.net/*"
    ],
    "background": {
        "service_worker": "background/serviceWorker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.bibmath.net/*"
            ],
            "css": [
                "styles/darkMode.css"
            ],
            "js": [
                "content/darkModeHandler.js"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Bibmath Blackboard â€¢ A sleek Dark Mode for Bibmath.net"
    },
    "icons": {
        "48": "assets/icons/bibmath-blackboard-logo-48.png"
    }
}